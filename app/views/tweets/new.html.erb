<%= render "header" %>

<%= form_with model: @tweet, local: true  do |f| %>


  <div class="form">

   <div class="title">
     <%= f.label "タイトル(必須)" %>
     <%= f.text_field :title %>
   </div>

   <div class="time">
     <%= f.label "日時(必須)" %>
     <%= f.datetime_select :start_time %>
   </div>

   <div class="content">
     <%= f.label "コメント(任意)" %>
     <%= f.text_area :content,class:"text" %>
   </div>
   
   <div class="image">
     <%= f.label "画像(任意)" %>
     <%= f.file_field :image, id:"tweet-image" %>
   </div>
   <div class="img", id="image-list"></div>
   

   <div class="submit">
     <%= f.submit "送信" %>
   </div>

  </div>
<% end %>

