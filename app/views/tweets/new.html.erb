<%= render "header" %>

<%= form_with(model: @tweet, local: true) do |f| %>


  <div class="form">

   <div class="title">
     <%= f.label "タイトル" %>
     <%= f.text_field :title %>
   </div>

   <div class="content">
     <%= f.label "投稿文" %>
     <%= f.text_field :content %>
   </div>
   
   <div class="image">
     <%= f.label "画像" %>
     <%= f.text_field :hoge %>
   </div>

   <div class="time">
     <%= f.label "日付" %>
     <%= f.datetime_select :start_time %>
   </div>

   <div class="submit">
     <%= f.submit "カレンダーへ" %>
   </div>

   
  </div>
<% end %>