<%= render "header" %>

<%= form_with(model: @tweet, local: true) do |f| %>


  <div class="form">
   <div class="title">
     <%= f.label :title %>
     <%= f.text_field :title %>
   </div>

   <div class="time">
     <%= f.label :start_time %>
     <%= f.datetime_select :start_time %>
   </div>

   <div class="content">
     <%= f.label :content %>
     <%= f.text_field :content %>
   </div>
   

   <div class="submit">
     <%= f.submit "カレンダーへ" %>
   </div>
  </div>
<% end %>