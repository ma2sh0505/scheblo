<%= render "header" %>

<p id="notice"><%= notice %></p>

 <div class="form">
  <p>
   <strong>タイトル</strong>
   <%= @tweet.title %>
  </p>

   <p>
    <strong>時間</strong>
    <%= @tweet.start_time.strftime("%Y-%m-%d %H:%M") %>
   </p>
   
   <% unless @tweet.nil?  ==  @tweet.image.attached?%>
   <p>
   <%= image_tag @tweet.image ,class:"item-box-img" %>
   </p>
   <% end %>

   <p>
    <strong>内容</strong>
    <%= @tweet.content %>
   </p>

   <div class="abc">
   <%= link_to '編集',edit_tweet_path(@tweet) %> |
   <%= link_to '削除',tweets_path %>
   </div>
 </div>